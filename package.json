{
  "name": "thrift_shop",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@wdio/cli": "^7.7.3",
    "cross-env": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@wdio/firefox-profile-service": "^7.7.3",
    "@wdio/local-runner": "^7.7.3",
    "@wdio/mocha-framework": "^7.7.3",
    "@wdio/spec-reporter": "^7.7.3",
    "chromedriver": "^91.0.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-typescript-prettier": "^4.2.0",
    "jest-environment-jsdom-sixteen": "^2.0.0",
    "prettier": "^2.3.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4",
    "wdio-chromedriver-service": "^7.1.0",
    "wdio-image-comparison-service": "^2.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage --watchAll=false --env=jest-environment-jsdom-sixteen",
    "test:watch": "react-scripts test --coverage --env=jest-environment-jsdom-sixteen",
    "test:update": "react-scripts test --coverage --watchAll=false --env=jest-environment-jsdom-sixteen -u",
    "test:wdio": "cross-env TS_NODE_PROJECT=tsconfig.wdio.json wdio wdio.conf.ts",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx}",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "lint:fix": "eslint --fix src/**/*.{js,jsx,ts,tsx}"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
